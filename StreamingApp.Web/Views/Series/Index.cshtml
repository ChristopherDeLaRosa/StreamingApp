@model IEnumerable<StreamingApp.Web.ViewModels.SerieListViewModel>

@{
    ViewData["Title"] = "Series";
}

<div class="container mt-5">
    <h2 class="text-white mb-4">Series</h2>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-primary">Agregar Serie</a>
        <input type="text" class="form-control w-25" placeholder="Buscar serie...">
    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Género</th>
                <th>Productora</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var serie in Model)
            {
                <tr>
                    <td>@serie.Name</td>
                    <td>@serie.Genre</td>
                    <td>@serie.Producer</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@serie.Id" class="btn btn-sm btn-secondary me-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@serie.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
