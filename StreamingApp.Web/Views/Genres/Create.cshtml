@model StreamingApp.Web.ViewModels.GenreCreateViewModel

@{
    ViewData["Title"] = "Agregar Género";
}

<div class="container mt-5">
    <h2 class="text-white mb-4">Agregar Nuevo Género</h2>
    <form asp-action="Create" class="needs-validation" novalidate>
        <div class="mb-3 position-relative">
            <input asp-for="Name" class="form-control" placeholder=" " required>
            <label asp-for="Name" class="form-label">Nombre del Género</label>
            <div class="invalid-feedback">
                Por favor, ingresa un nombre válido.
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

