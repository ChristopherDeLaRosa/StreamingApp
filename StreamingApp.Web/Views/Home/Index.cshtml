@model StreamingApp.Web.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<div class="hero-section position-relative">
    <img src="~/images/hero-background.jpg" class="w-100" alt="Hero Image">
    <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="hero-content position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1>Bienvenido a StreamApp</h1>
        <p>Explora nuestras series más populares</p>
        <a href="#series" class="btn btn-primary">Ver Series</a>
    </div>
</div>

<!-- Search and Filters -->
<div class="container mt-5">
    <div class="d-flex justify-content-center mb-4">
        <input asp-for="Search" class="form-control w-50 me-2" placeholder="Buscar series...">
        <button class="btn btn-primary">Buscar</button>
    </div>
    <div class="d-flex justify-content-center mb-5">
        <div class="me-3">
            @foreach (var genre in Model.Genres)
            {
                <a asp-action="Index" asp-route-genreId="@genre.Value" class="badge bg-secondary me-1">
                    @genre.Text
                </a>
            }
        </div>
        <div>
            @foreach (var producer in Model.Producers)
            {
                <a asp-action="Index" asp-route-producerId="@producer.Value" class="badge bg-secondary me-1">
                    @producer.Text
                </a>
            }
        </div>
    </div>
</div>

<!-- Series Carousel -->
<div id="series" class="container">
    <h2 class="text-white mb-4">Series Populares</h2>
    <div class="series-carousel d-flex overflow-auto">
        @foreach (var serie in Model.Series)
        {
            <div class="serie-card position-relative me-3">
                <img src="@serie.CoverImage" alt="@serie.Name" class="card-img">
                <div class="card-overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-2">
                    <h5 class="text-white">@serie.Name</h5>
                    <p class="text-white-50">@serie.Genre</p>
                    <a asp-action="Details" asp-route-id="@serie.Id" class="stretched-link"></a>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            height: 70vh;
            overflow: hidden;
        }
        .hero-section .overlay {
            background: rgba(0, 0, 0, 0.5);
        }
        .series-carousel {
            scroll-snap-type: x mandatory;
        }
        .serie-card {
            min-width: 200px;
            scroll-snap-align: start;
        }
        .serie-card .card-img {
            border-radius: 5px;
        }
        .card-overlay {
            background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
            border-radius: 5px;
        }
    </style>
}

